     <style name="Dialog_Text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/ob_color_black</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Dialog_Text.White">
        <item name="android:textColor">@color/ob_color_white</item>
    </style>
    
    <style name="Dialog_Text.White.Title">
        <item name="android:textSize">22sp</item>
    </style>
    
     <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <!--  <item name="android:background">@drawable/dialog_background</item>-->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>
   
    
    <style name="Theme.AndroidDevelopers" parent="@android:style/Theme.Holo.Light">
        <!-- style the list navigation -->
        <item name="android:actionDropDownStyle">@style/myDropdownStyle</item>
        <!-- style the whole actionbar -->
        <item name="android:actionBarStyle">@style/myActionBar</item>
        <!-- 字体颜色 -->
        <item name="android:actionMenuTextColor">@color/white</item>
        <!-- 显示在item上的样式 -->
        <item name="android:actionButtonStyle">@style/myActionButton</item>
        <item name="android:actionMenuTextAppearance">@style/myActionMenuTextAppearance</item>
        <item name="android:actionOverflowButtonStyle">@style/myActionMenuTextAppearance</item>
        <item name="android:divider">?android:attr/dividerVertical</item>
        <item name="android:actionBarDivider">?android:attr/dividerVertical</item> 
    </style>
 
    <style name="myActionButton" parent="@android:style/Widget.Holo.Light.ActionButton">
         
         <item name="android:background">@color/gaingray</item>
         <item name="android:maxWidth">10dip</item>  
         <item name="android:gravity">center</item>  
         <item name="android:paddingLeft">100dip</item>  
         <item name="android:paddingRight">0dip</item>  
         <item name="android:scaleType">center</item> 
         <item name="android:divider">@drawable/divider</item>
    </style>
    <style name="myActionMenuTextAppearance" parent="@android:style/Widget.Holo.Light.TextView">
         <item name="android:background">@drawable/text_back</item>
         <item name="android:textSize">20dip</item> 
         <item name="android:textColor">@color/white</item>   
         <item name="android:gravity">center</item>  
         <item name="android:paddingLeft">5dip</item>  
         <item name="android:paddingRight">5dip</item>  
         <item name="android:textStyle">bold</item> 
     </style>
     <style name="myActionOverflowButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
         <item name="android:background">@drawable/text_back</item>
         <item name="android:textSize">20dip</item> 
         <item name="android:textColor">@color/white</item>   
         <item name="android:gravity">center</item>  
         <item name="android:paddingLeft">5dip</item>  
         <item name="android:paddingRight">5dip</item>  
         <item name="android:textStyle">bold</item> 
    </style>
    <style name="myActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/gaingray</item>
        <item name="android:height">50dip</item>
        <item name="android:divider">@drawable/divider</item>
    </style>
    <style name="myDropdownStyle" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/text_back</item>
        
        <item name="android:popupBackground">@drawable/text_back</item> 
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center</item>       
    </style>
     
    
