<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- android:background="@drawable/bg_title" -->

    <RelativeLayout
        android:id="@+id/navLayout"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/white">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/back"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
           <ImageView
              android:layout_width="18dp"
              android:layout_height="18dp"
              android:src="@drawable/back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="18dp" >
            </TextView>

        </LinearLayout>
        <TextView
            android:id="@+id/center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="18dp" >
        </TextView>

        <Button
            android:id="@+id/system_settings"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="335dp"
            android:layout_centerVertical="true"
            android:background="@drawable/setting"
            android:contentDescription="@null"
            android:visibility="visible"
            android:clickable="true"/>
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cccccc"></View>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cornerview"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <ImageView
                    android:id="@+id/versionlogo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/logo" />

                <TextView
                    android:id="@+id/versionname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/cornerview"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gradeSum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12dip"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp">

                    <ProgressBar
                        android:id="@+id/studyProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="6dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:progressDrawable="@drawable/progressbg"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/resultView"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/gradeTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="12dip"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/commonLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/cornerview"

                android:orientation="vertical">

                <!--
                <ExpandableListView
                    android:id="@+id/personalCenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                    -->
                <Button
                    android:id="@+id/personalCenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:paddingLeft="5dp"
                    android:text="个人中心"
                    android:textSize="16dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#cccccc"></View>

                <Button
                    android:id="@+id/updatecourses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:paddingLeft="5dp"
                    android:text="同步课程"
                    android:textSize="16dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#cccccc"></View>

                <Button
                    android:id="@+id/onlineservice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:paddingLeft="5dp"
                    android:text="在线客服"
                    android:textSize="15dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#cccccc"></View>


             <!--   <Button
                    android:id="@+id/sendLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:paddingLeft="5dp"
                    android:text="发送日志"
                    android:textSize="15dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#cccccc"></View>

                <Button
                    android:id="@+id/sendSensor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:paddingLeft="5dp"
                    android:text="发送传感数据"
                    android:textSize="15dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#cccccc"></View>-->

                <Button
                    android:id="@+id/update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:paddingLeft="5dp"
                    android:text="版本更新"
                    android:textSize="15dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#cccccc"></View>

                <Button
                    android:id="@+id/quitReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:paddingLeft="5dp"
                    android:text="退出登录"
                    android:textSize="15dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/personalLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/cornerview"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:paddingLeft="5dp"
                    android:text="成绩信息"
                    android:textSize="16dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#cccccc"></View>

                <Button
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:paddingLeft="5dp"
                    android:text="费用信息"
                    android:textSize="16dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#cccccc"></View>

                <Button
                    android:id="@+id/personal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:paddingLeft="5dp"
                    android:text="个人信息"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/cornerview"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/phone_connection"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15px"
                    android:autoLink="phone"
                    android:gravity="center"
                    android:text="联系我们"
                    android:textColor="#000000"
                    android:textSize="16dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/connection"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:autoLink="phone"
                        android:gravity="center"
                        android:text="029-82668194"
                        android:textColor="#000000"
                        android:textSize="16dip" />

                    <TextView
                        android:id="@+id/net_connection"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:autoLink="email"
                        android:gravity="center"
                        android:text="dlc@mail.xjtu.edu.cn"
                        android:textColor="#000000"
                        android:textSize="16dip" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>